<h2>商品詳細</h2>
<div class="row">
<div class="col-6">
  <%#= attachment_image_tag(@item, :image, size: "100x10", fallback: "") %>
</div>
<div class="col-6">
  <div>
    <p>商品名</p>
    <p><%= @item.name %></p>
  </div>
  <div>
    <p>商品説明<%= @item.detail %></p>
  </div>
  <div>
    <p>ジャンル<%= @genre.name %></p>
  </div>
  <div>
  	<p>
  		税込価格
  		(税抜価格)
  	</p>
  </div>
  <div>
    <p>
      販売ステータス
      <% if @item.is_sold == true %>
        <p>販売中</p>
      <% elsif @item.is_sold == false %>
        <p>販売停止中</p>
      <% end %>
    </p>
  </div>
</div>
</div>
<div class="mx-auto" style="width: 200px;">
  <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
</div>