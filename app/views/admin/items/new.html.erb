<h2>商品新規登録</h2>
<%= form_with model: @item, local:true do |f| %>
  <div>
    <%= f.label :"商品画像" %>
    <%= attachment_image_tag %>
  </div>
  <div class="form-group">
    <%= f.label :"商品名" %>
    <%= f.text_field %>
  </div>
  <div class="form-group">
    <%= f.label :"商品説明" %>
    <%= f.text_area %>
  </div>
  <div class="form-group">
    <%= f.label :"ジャンル" %>
    選択してください
  </div>
  <div class="form-group">
    <%= f.label :"税抜価格" %>
    <%= f.text_field %>円
  </div>
  <div class="form-group">
    <%= f.label :"販売ステータス" %>
    <%= f.select :is_sale, [['販売中', true], ['販売停止', false]], prompt: "-- 選択してください --" %>
  </div>
  <div>
    <%= f.submit "新規登録" %>
  </div>
<% end %>