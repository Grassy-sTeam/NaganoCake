<h2>商品編集</h2>
<div class="mx-auto" style="width: 200px;">
<%= form_with model:@item, url: admin_item_path(@item),local:true do |f| %>
  <div>
    <%= f.label :"商品画像" %>
    <%#= attachment_image_tag %>
  </div>
  <div class="form-group">
    <%= f.label :"商品名", class: "" %>
    <%= f.text_field :name, class: "" %>
  </div>
  <div class="form-group">
    <%= f.label :"商品説明" %>
    <%= f.text_area :detail %>
  </div>
  <div class="form-group">
    <%= f.label :"ジャンル" %>
    <%= f.collection_select(:genre_id, Genre.all, :id, :name , prompt: "-- 選択してください --") %>
  </div>
  <div class="form-group">
    <%= f.label :"税抜価格" %>
    <%= f.text_field :purchased_price %>円
  </div>
  <div class="form-group">
    <%= f.label :"販売ステータス" %>
    <%= f.select :is_sale, [['販売中', true], ['販売停止', false]], prompt: "-- 選択してください --" %>
  </div>
  <div>
    <%= f.submit "変更内容保存", class: "btn btn-success" %>
  </div>
<% end %>
</div>