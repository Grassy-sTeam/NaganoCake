<h2>商品編集</h2>
<%= form_with url: admin_item_path,local:true do |f| %>
  <div>
    <%= f.label :"商品画像" %>
    <%= attachment_image_tag %>
  </div>
  <div class="form-group">
    <%= f.label :"商品名" %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :"商品説明" %>
    <%= f.text_area :detail %>
  </div>
  <div class="form-group">
    <%= f.label :"ジャンル" %>
    選択してください
  </div>
  <div class="form-group">
    <%= f.label :"税抜価格" %>
    <%= f.text_field %>円
  </div>
  <div class="form-group">
    <%= f.label :"販売ステータス" %>
    販売中 or 販売停止中
  </div>
  <div>
    <%= f.submit "変更内容保存" %>
  </div>
<% end %>