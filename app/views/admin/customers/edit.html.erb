<h2><%= full_name(@customer) %>さんの会員情報編集</h2>
<%= form_with %>
  <div>
    <%= f.label :"会員ID" %>
    <%= f.label %>
  </div>
  <div class="form-group">
    <%= f.label :"氏名" %>
    <%= f.text_field :last_name %>　
    <%= f.text_field :first_name %>
  </div>
  <div class="form-group">
    <%= f.label :"フリガナ" %>
    <%= f.text_field :kana_last_name %>
    <%= f.text_field :kana_first_name %>
  </div>
  <div class="form-group">
    <%= f.label :"郵便番号" %>
    <%= f.text_field :postal_code %>
  </div>
  <div class="form-group">
    <%= f.label :"住所" %>
    <%= f.text_field :address %>
  </div>
  <div class="form-group">
    <%= f.label :"電話番号" %>
    <%= f.text_field :telephone_number %>
  </div>
  <div class="form-group">
    <%= f.label :"メールアドレス" %>
    <%= f.text_field :email %>
  </div>
  <div class="form-group">
    <%= f.label :"会員ステータス" %>
    　<%= f.radio_button %>
    　<%= f.label :is_valid, "退会済" %>
    　<%= f.radio_button %>
    　<%= f.label :is_valid, "有効" %>
  </div>
  <div>
    <%= f.submit '変更を保存する' %>
  </div>
<% end %>