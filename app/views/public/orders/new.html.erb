<h3>注文情報入力</h3>
<%= form_with model: @orders, url: customers_orders_confirm_path, method: :post,local: true do |f| %>
	<%= f.label :payment_method, "支払い方法" %>
	<br>
	<%= f.radio_button :payment_method,:クレジットカード,0, checked: "checked" %>
	<%= f.label :payment_method, "クレジットカード" %>
	<br>
	<%= f.radio_button :payment_method, :銀行振込, 1 %>
	<%= f.label :payment_method, "銀行振込" %>
	<br>

	<%= f.label :address, "お届け先" %>
	<br>

	<%= f.radio_button :address_option, checked: "checked" %>
	<%= f.label :order_address, "ご自身の住所" %>
	<%= @customer.postal_code %>
	<%= @customer.address %>
	<br>
	<%= f.radio_button :address_option %>
	<%= f.label :order_address, "登録済住所から選択" %>
	<%= f.collection_select :order_address , current_customer_order.addresses, :id, :address , :include_blank => "選択してください" %>

	<br>
	<%= f.radio_button :address_option %>
	<%= f.label :order_address, "新しいお届け先" %>
	<br>

	<%= f.label :postal_code, "郵便番号" %>
	<%= f.text_field :postal_code %>
	<br>

	<%= f.label :order_address, "住所" %>
	<%= f.text_field :order_address %>
	<br>

<%= f.submit "確認画面へ進む" , public_orders_confirm_path, class:"btn btn-primary",  %>

<% end %>