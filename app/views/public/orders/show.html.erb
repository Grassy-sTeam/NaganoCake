<h2>注文履歴詳細</h2>
  <h3>注文情報</h3>
    <table class='table order-information'>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <th>注文日</th><td><%= order.date %></td>
          </tr>
          <tr>
            <th>配送先</th><td><%= order.oddress %></td>
          </tr>
          <tr>
            <th>支払い方法</th><td><%= order.payment_method%></td>
          </tr>
          <tr>
            <th>ステータス</th><td>< %= order.status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
  <h3>請求情報</h3>
    <table class='table billing-information'>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <th>配送料</th><td><%= order.shipping_cost %></td>
            </tr>
            <tr>
              <th>ご請求額</th><td><%= order.total_price %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
  <h3>注文内容</h3>
    <table class='table order-details'>
        <thead>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.name %></td>
              <td><%= order.perchased_price %></td>
              <td><%= order.count %></td>
            </tr>
          <% end %>
        </tbody>
    </table>