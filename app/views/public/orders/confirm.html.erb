<div class='container px-12 px-sm-0'>
  <h3>注文情報確認画面</h3>
  <div class='row'>
    <div class='col-md-7'>
      <table>
          <thead>
            <tr>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <th colspan="3"></th>
</tr>
</thead>
<tbody>
    <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= (cart_item.item.price * 1.1).to_i %></td>
          <td><%= cart_item.count %></td>
          <% tax = 1.1 %>
          <% @subtotal = (cart_item.item.price * tax * cart_item.count).to_i %>
          <td><%= @subtotal %></td>
        </tr>
    <% end %>
</tbody>
</table>
</div>
<div class='col-md-7'>
    <table>
        <thead>
            <tbody>
              <tr>
                  <!--普通は送料モジュールを使用する-->
                <td>送料</td><td>800</td>
                <td>商品合計</td><td><%= @item_total %></td>
                <td>請求金額</td><td><%= @item_total + 800 %></td>
              </tr>
            </tbody>
        </thead>
    </table>
</div>
</div>
</div>
    <%= form_with model: @order, url:public_orders_path do |f| %>
    <div class ="payment_method">支払い方法</div>
        <%= @order.payment_method %>
    <div class ="payment_method">お届け先</div>
        <%= @order.address %>
         <%= f.hidden_field :name, :value => @order.name %>
         <%= f.hidden_field :address, :value => @order.address %>
         <%= f.hidden_field :postal_code, :value => @order.postal_code %>
         <%= f.hidden_field :payment_method, :value => @order.payment_method %>
         <%= f.hidden_field :total_price, :value => (@item_total + 800) %>
        <%=f.submit "注文を確定する", class:"btn btn-success" %>
    <% end %>