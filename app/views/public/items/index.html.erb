<div>
  <h2>商品一覧</h2>（全<%= @items.count%>件）
</div>
<div id="item-index-space">
  <% @items.each do |item| %>
  <div class="item-space" id="#{item.id}-space">
    <div>
      <%= link_to public_item_path(item) do %>
        <%= attachment_image_tag(item, :image, :fill, 100, 200, fallback: "no-image-icon.jpg") %>
      <% end %>
    </div>
    <div><%= item.name %></div>
    <div>
      \<%= price_with_tax(item.price).to_s(:delimited, delimiter: ',') %>
    </div>
  <% end %>
</div>
