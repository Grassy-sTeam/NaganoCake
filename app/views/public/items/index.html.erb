
<h2>商品一覧<span>（全<%= @items.count%>件）</span></h2>
  <% tax = 1.1 %>
  <div id="items-space">
  <% @items.each do |item| %>
	<div class="item-presentation">
	  <%= link_to public_item_path(item.id) do %>
      <div class="item-picture">
        <%#= attachment_image_tag(item, :image, size: "200x100", fallback: "no_image.jpg") %>
      </div>
      <p class="item-name">
        <%= item.name %>
      </p>
      <p class="item-price-with-tax">
        ¥<%= (item.price * tax).to_i.to_s(:delimited) %>
      </p>
    <% end %>
  </div>
	<% end %>
	</div>
<div><%= paginate(@items) %></div>