<%# <div class="container"> %>
<%# <div class="row"> %>
<%# <div class="column"> %>
<%= image_tag(@item.image_id, alt: "Item Image", id: "item-image") %>
<%# </div> %>
<%# <div class="column"> %>
<%= form_with model:@cart_item, local:true do |f| %>
<h3 id="item-name">@item.name</h3>
<p id="item-detail">@item.detail</p>
<div class="form-group">
  <% tax = 1.1 %>
  <p id="item-price"><span>\<%= (item.price * tax).to_i.to_s(:delimited, delimiter: ',') %></span>（税込み）</p>
</div>
<%= f.number_field :count, id: "item-count", min:1, max: 1000, placeholder: "個数選択"%>
<%= f.submit "カートに入れる"%>
<% end %>
<%# </div> %>
<%# </div> %>
<%# </div> %>