<div class="container">
  <div class="row">
    <div class="col-8">
      <h3>マイページ</h3>
      <h4><strong>登録情報</strong><%= link_to "編集する", edit_public_customer_path(@customer.id) %></h4>
        <table class="table">
          <tbody>
            <tr>
              <td>氏名</td>
              <td><%= @customer.first_name %> <%= @customer.last_name %></td>
            </tr>
            <tr>
              <td>カナ</td>
              <td><%= @customer.kana_first_name %> <%= @customer.kana_last_name %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= @customer.email %></td>
            </tr>
          </tbody>
        </table>

        <p><strong>配送先</strong><%= link_to "一覧を見る", public_addresses_path %></p>
        <p><strong>注文履歴</strong><%= link_to "一覧を見る", public_orders_path %></p>
      </div>
    </div>
</div>