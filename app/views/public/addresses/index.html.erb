<%= form_with model:@address, local:true do |f| %>
<div class="form-group">
  <%= f.label :postal_code "郵便番号(ハイフンなし)" %>
  <%= f.text_area :postal_code, class: "form_control postal_code" %>
</div>
<div class="form-group">
  <%= f.label :address "住所" %>
  <%= f.text_area :postal_code, class: "form_control address" %>
</div>
<div class="form-group">
  <%= f.label :name "宛名" %>
  <%= f.text_field :name, class: "form_control name" %>
  <%= f.submit "新規登録", class: 'btn btn-success' %>
</div>
<% end %>
<!--</div>-->
<%# <div class="row"> %>
<table>
  <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
  </tr>
  <% @addresses.each do |address| %>
  <tr>
    <td>address.postal_code</td>
    <td>address.address</td>
    <td>address.name</td>
    <td>
      <div class="address-edit">
        <%= link_to "編集", edit_address_path(address), class: "btn btn-sm btn-success edit_address_#{address.id}" %>
      </div>
      <div class="address-delete">
        <%= link_to "削除", address_path(address), method: :delete %>
      </div>
    </td>
  </tr>
  <% end %>
</table>
